{
  "extends": ["solhint:recommended"],
  "rules": {
    "compiler-version": ["error", "^0.8.9"],
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": ["warn", {
      "ignoreConstructors": true
      }
    ]
  },
  "plugins": ["prettier"]
}
